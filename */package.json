{
  "name": "*",
  "version": "1.0.0",
  "description": "Project '*' uses a hexagonal architecture, no ORM and Express library.",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "m:gen": "npm run migration:generate",
    "m:revert": "npm run migration:revert",
    "m:run": "npm run migration:run",
    "m:show": "npm run migration:show",
    "migration:generate": "TS_NODE_PROJECT=./tsconfig.json ts-node -r tsconfig-paths/register scripts/generate-migration.ts",
    "migration:revert": "TS_NODE_PROJECT=./tsconfig.json typeorm-ts-node-commonjs migration:run -d ./src/adapters/secondary/persistence/orm/data-source.ts",
    "migration:run": "TS_NODE_PROJECT=./tsconfig.json typeorm-ts-node-commonjs migration:run -d ./src/adapters/secondary/persistence/orm/data-source.ts",
    "migration:show": "TS_NODE_PROJECT=./tsconfig.json typeorm-ts-node-commonjs migration:run -d ./src/adapters/secondary/persistence/orm/data-source.ts",
    "start": "node dist/src/index.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "watch": "tsc --watch"
  },
  "keywords": [
    "api",
    "backend",
    "nodejs",
    "typescript",
    "express",
    "hexagonal",
    "ports-adapters"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "inversify": "^7.10.0",
    "mysql2": "^3.14.4",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.26"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.5",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.12.2",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}